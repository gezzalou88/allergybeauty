@model AllergicBeauty.Models.RegisterViewModel

@{
    ViewBag.Title = "Register Role";
}

<h2>ViewBag.Title</h2>


@using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Create a new account</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Select Role", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UserName")
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Select Role", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Name")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create Role" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
